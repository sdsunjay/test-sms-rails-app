<div id="verify-pin">
<h3>Enter your PIN</h3>
<%= form_tag users_verify_path, remote: true do |f| %>
  <%= hidden_field_tag 'hidden_phone_number', '' %>
  <div class="form-group">
	<%= text_field_tag :pin, nil, :required => true %>
  </div>
  <%= submit_tag "Verify PIN", class: "btn btn-primary" %>
  <% end %>
</div>

